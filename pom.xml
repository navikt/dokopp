<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>no.nav.dokopp</groupId>
	<artifactId>dokopp</artifactId>
	<version>0.0.11</version>

	<name>dokopp</name>
	<packaging>pom</packaging>

	<prerequisites>
		<maven>3.3.9</maven>
	</prerequisites>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.10.RELEASE</version>
	</parent>

	<profiles>
		<profile>
			<id>allExceptSystemtest</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>app</module>
			</modules>
		</profile>
		<profile>
			<id>systemtest</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.20.1</version>
						<configuration>
							<includes>
								<include>**/*SystemT.java</include>
							</includes>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<modules>
				<module>systemtest</module>
			</modules>
		</profile>
	</profiles>

	<distributionManagement>
		<repository>
			<id>m2internal</id>
			<name>NAV Internal Repository</name>
			<url>dav:http://maven.adeo.no/nexus/content/repositories/m2internal</url>
		</repository>
		<snapshotRepository>
			<id>m2snapshot</id>
			<name>NAV Snapshot Repository</name>
			<url>dav:http://maven.adeo.no/nexus/content/repositories/m2snapshot</url>
		</snapshotRepository>
	</distributionManagement>

	<properties>
		<start-class>no.nav.dokopp.Application</start-class>
		<project.scm.id>stash</project.scm.id>
		<additionalparam>-Xdoclint:none</additionalparam>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<wmq.version>8.0.0.6</wmq.version>
		<lombok.version>1.16.20</lombok.version>
		<prometheus.version>0.2.0</prometheus.version>
		<activemq.version>5.15.0</activemq.version>
		<saxon.version>9.0</saxon.version>
		<geronimo.version>1.1.1</geronimo.version>
		<transaction.version>1.1</transaction.version>
		<inject.version>1</inject.version>
		<modig-log-common.version>1.1.3</modig-log-common.version>
		<nav-behandleOppgave-v1-tjenestespesifikasjon>1.0.0-SNAPSHOT</nav-behandleOppgave-v1-tjenestespesifikasjon>
		<!--<arkiverdokumentmottak-tjenestespesifikasjon-v2.version>2.1.3</arkiverdokumentmottak-tjenestespesifikasjon-v2.version>-->
		<awaitility.version>3.0.0</awaitility.version>
		<junit.version>4.12</junit.version>
		<commons-io.version>2.4</commons-io.version>
		<wiremock-standalone.version>2.15.0</wiremock-standalone.version>
		<xmlunit-core.version>2.3.0</xmlunit-core.version>
		<xmlunit-legacy.version>2.3.0</xmlunit-legacy.version>
		<modig-testcertificates.version>1.2.0</modig-testcertificates.version>
		<logstash-logback-encode.version>4.11</logstash-logback-encode.version>
		<fasit-client-apie.version>5.6.4</fasit-client-apie.version>
		<spring-jdbc.version>4.1.6.RELEASE</spring-jdbc.version>
		<javax.transaction-api.version>1.2</javax.transaction-api.version>
		<javax.json-api.version>1.0</javax.json-api.version>
		<javax.json.version>1.0.4</javax.json.version>
		<!-- Take care when updating any of these. modig-security depends on CXF versions that might be incompatible. -->
		<modig-security.version>3.0.6</modig-security.version>
		<camel.version>2.20.2</camel.version>
		<cxf.version>3.2.1</cxf.version>
	</properties>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<version>2.20.1</version>
				<reportSets>
					<reportSet>
						<id>integration-tests</id>
						<reports>
							<report>failsafe-report-only</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav-jackrabbit</artifactId>
				<version>1.0</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.20.1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.20.1</version>
				<configuration>
					<additionalClasspathElements>${basedir}/target/classes</additionalClasspathElements>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>1.5.10.RELEASE</version>
				<configuration>
					<skip>false</skip>
					<fork>true</fork>
					<useTestClasspath>true</useTestClasspath>
					<excludes>
						<exclude>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
						</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
						<configuration>
							<finalName>app</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


</project>